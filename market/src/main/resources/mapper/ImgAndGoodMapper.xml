<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.market.mapper.ImgAndGoodMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.market.entity.ImgAndGood">
        <id column="img_url" property="imgUrl" />
        <result column="good_id" property="goodId" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        img_url, good_id, create_time
    </sql>

    <select id="getImgUrl" resultType="java.lang.String">
        SELECT img_url
        FROM img_and_good
        WHERE good_id = #{sid}
    </select>
    <select id="selectByGoodId" resultType="com.market.entity.ImgAndGood">
        SELECT *
        FROM img_and_good
        WHERE good_id = #{goodId}
        LIMIT 1
    </select>

</mapper>
