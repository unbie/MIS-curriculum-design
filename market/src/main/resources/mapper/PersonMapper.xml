<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.market.mapper.PersonMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.market.entity.Person">
        <id column="person_id" property="personId" />
        <result column="account" property="account" />
        <result column="user_name" property="userName" />
        <result column="password" property="password" />
        <result column="sex" property="sex" />
        <result column="campus_id" property="campusId" />
        <result column="register_date" property="registerDate" />
        <result column="is_locked" property="isLocked" />
        <result column="create_time" property="createTime" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        person_id, account, user_name, password, sex, campus_id, register_date, is_locked, create_time
    </sql>

    <select id="listPersonVo" resultType="com.market.controller.vo.PersonVo">
        SELECT
            p.person_id,
            p.account,
            p.user_name,
            p.password,
            p.sex,
            n.campus_name,
            p.register_date,
            p.is_locked,
            p.create_time
        FROM
            person p
        JOIN near_sell n ON p.campus_id = n.campus_id;
    </select>

    <!--    获取最大的id-->
    <select id="getMaxId" resultType="java.lang.Integer">
        SELECT MAX(person_id) FROM person
    </select>
</mapper>
